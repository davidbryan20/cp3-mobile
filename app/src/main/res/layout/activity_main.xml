<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/black"> <!-- Fundo preto -->

    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem-vindo ao Aplicativo de Medicamentos"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnAdicionarMedicamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar Medicamento"
        android:textColor="@android:color/white"
        android:background="@android:color/darker_gray"/>

    <Button
        android:id="@+id/btnListaMedicamentos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Lista de Medicamentos"
        android:textColor="@android:color/white"
    android:background="@android:color/darker_gray"/>

</LinearLayout>
